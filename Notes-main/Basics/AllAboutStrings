//AllAboutStrings

const l = "Javascript";
// the same way you can use the index to find a value in an array, you can use index & length to find the characters of a string
console.log(l[1]) // to return only 1 character
console.log(l[-2]) //undefined

// to find 1 character
// .at method
console.log(l.at(-1)) // result = t
// .length method
console.log(l[l.length - 1 ]) // result = t

// find total # of characters
console.log(l.length) // result = 10
console.log(l.length-1) // result 9

// grab a few characters from a string // .substring method
console.log(l.substring(0, 4)) // returns first 4 characters


//
// Convert into a string 
//
// method = String(variable) && .toString()
let boo = false
console.log(String(`That is ` + boo)) //  result = `that is false`

//OR add ''
let three = 3 + '' // result = ‘3’
console.log(three)


// Methods can be applies to strings stored in variables
//example:
const lb = " Javascript ";

// removes space before and after 
console.log(lb.trim())

// .toLowerCase()
console.log(lb.toLowerCase())

// .toUpperCase
console.log(lb.toUpperCase())

// to Capatalize 
const ab = 'goBlin'
console.log(ab.at(0).toUpperCase() + ab.substring(1, ab.length).toLowerCase())
// OR  .atChar()



function getFirstCharacter(name) {
    return name.at(0)
}
//
function getDescription(text) {
    return text.substring(0, 10) + "..."
}

